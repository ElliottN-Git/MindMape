{{#if articles}}
    {{#each articles}}
    <div class="card mb-4">
        <form action="./article" method="POST"> 
            <div class="card-body mt-4">
                <h2 class="card-title">Article Title: {{this.title}}</h2>
                <span>by {{this.username}}</span>
                <span>{{#summary this.content}}{{/summary}}</span>
            </div>
            <div>
                <button type="submit" class="btn btn-primary bt-submit" name="articleId" value="{{this.articleId}}">Read Full Article!</button>
            </div>
        </form>
        
        <hr>
    </div>
    {{/each}}
{{/if}}