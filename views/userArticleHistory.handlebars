<div class="card-columns">
{{#if articles}}

    {{#each articles}}
    <div class="card text-center">
        <form action="./censoredArticle" method="POST">
            <div class="card-header">
                {{#getImage this.content}}{{/getImage}}
            </div> 
            <div class="card-body mt-4">
                <h1 class="card-title">{{this.title}}</h1>
                <p><em>by {{this.username}}</em></p>
                <p class="card-text">{{#summary this.content}}{{/summary}}</p>
            </div>
            <div>
                <button formaction="/article" type="submit" class="btn btn-primary bt-submit" name="articleId" value="{{this.articleId}}">Read Full Article!</button>
                <button formaction="/editArticle" type="submit" class="btn btn-primary bt-submit" name="articleId" value="{{this.articleId}}">Edit Article!</button>
                <button formaction="/deleteArticle" type="submit" class="btn btn-primary bt-submit" name="articleId" value="{{this.articleId}}">Delete Article!</button>
            </div>
        </form>

    </div>
    
    {{/each}}
    
{{/if}}
</div>